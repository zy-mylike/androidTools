<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.ProxyActivity">

    <include layout="@layout/layout_activity_header_main" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#F8F8F8"
                android:orientation="vertical"
                android:padding="@dimen/px_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择您愿意付给渠道代理的推广费"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_38_px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注: 渠道代理  发生的条数以收到条数计算"
                    android:textColor="@color/text_color_holder"
                    android:textSize="@dimen/text_size_26_px" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/px_30">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_40"
                    android:text="推广费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_42_px" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:text="注: 最低0.05元/条"
                    android:textColor="@color/text_color_holder"
                    android:textSize="@dimen/text_size_38_px" />

                <include
                    android:id="@+id/line"
                    layout="@layout/layout_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_3"
                    android:layout_below="@+id/textView3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px_15"
                        android:paddingTop="@dimen/px_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推广费"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="0.05元/条"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                    </LinearLayout>

                    <include layout="@layout/layout_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px_15"
                        android:paddingTop="@dimen/px_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推送条数频次"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="5条/日"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                    </LinearLayout>

                    <include layout="@layout/layout_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px_15"
                        android:paddingTop="@dimen/px_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推广费"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="0.05元/条"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                    </LinearLayout>

                    <include layout="@layout/layout_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px_15"
                        android:paddingTop="@dimen/px_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单月天数"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                        <EditText
                            android:id="@+id/month_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="30天/月"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#F8F8F8"
                android:orientation="vertical"
                android:padding="@dimen/px_30">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择你愿意付给渠道代理的返点比例，这将会在代理为你成功推销出商品后作为奖励发改代理。"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/px_30">


                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_40"
                    android:text="返点费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_42_px" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text"

                    android:layout_toRightOf="@+id/text"
                    android:text="注: 成交价格的百分比"
                    android:textColor="@color/text_color_holder"
                    android:textSize="@dimen/text_size_38_px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:layout_toEndOf="@+id/text"
                    android:layout_toRightOf="@+id/text" android:paddingBottom="@dimen/px_15"
                    android:paddingTop="@dimen/px_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="返点费"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                        <EditText
                            android:id="@+id/rebate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="1%"
                            android:textColor="@color/text_color_holder"
                            android:textSize="@dimen/text_size_38_px" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#F8F8F8"
                android:orientation="vertical"
                android:padding="@dimen/px_30">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们对您的充值费用做个预算。"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_38_px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注: 返点费用不在此项内，当产生返点时系统会提示您充值。"
                    android:textColor="@color/text_color_holder"
                    android:textSize="@dimen/text_size_26_px" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/px_30">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预算总计"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_42_px" />

                <TextView
                    android:id="@+id/money_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="255元/月"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/red_holder"

                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/px_40">

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拒绝" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>