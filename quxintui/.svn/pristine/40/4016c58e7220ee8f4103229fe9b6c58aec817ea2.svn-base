<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_chosepic"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="@dimen/px_12"
            android:paddingTop="@dimen/px_24"
            android:text="上传照片"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_20_px" />

        <include layout="@layout/layout_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:layout_marginBottom="@dimen/px_3"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_18"
            android:paddingRight="@dimen/px_18">

            <TextView
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/px_8"
                android:drawableTop="@mipmap/us_images"
                android:gravity="center"
                android:paddingBottom="@dimen/px_12"
                android:paddingTop="@dimen/px_24"
                android:text="相册"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_20_px" />

            <TextView
                android:id="@+id/take_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/px_8"
                android:drawableTop="@mipmap/us_take"
                android:gravity="center"
                android:paddingBottom="@dimen/px_12"
                android:paddingTop="@dimen/px_24"
                android:text="相机"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_20_px" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_dialog_chosepic"
        android:padding="@dimen/px_20"
        android:text="取消"
        android:textColor="@color/text_color" />


</LinearLayout>
