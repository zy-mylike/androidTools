<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.agent.PhoneCodeActivity">

    <include layout="@layout/layout_activity_header_main" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_12"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginTop="@dimen/px_12"
        android:text="已发送短信验证码至：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/edit_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cards_code_emti"
            android:digits="0123456789"
            android:hint="验证码"
            android:maxLines="1"
            android:paddingLeft="@dimen/px_12"
            android:singleLine="true" />

        <Button
            android:id="@+id/get_authCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_11"
            android:background="@drawable/cards_code_get"
            android:text="重新获取"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/submint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_36"
        android:background="@drawable/cards_submint_full"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20_px" />


</LinearLayout>
