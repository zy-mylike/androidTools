<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_black"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.ProxylistsActivity">

    <include layout="@layout/layout_activity_header_main" />

    <org.eteclab.ui.widget.pulltorefresh.PullToLoadView
        android:id="@+id/proxy_listed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_chose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/tb_chose_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_share_record_left"
            android:padding="10dp"
            android:textOff="全选"
            android:textOn="取消"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/tb_deleteall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_share_record_right"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textOff="删除"
            android:textOn="删除"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
