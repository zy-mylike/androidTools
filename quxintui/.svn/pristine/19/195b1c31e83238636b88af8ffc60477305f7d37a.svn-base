<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.agent.UserCardActivity">

    <include layout="@layout/layout_activity_header_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7D6CD"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_24"
            android:src="@mipmap/unkowm_info" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_36"
            android:layout_marginTop="@dimen/px_12"
            android:gravity="center"
            android:text="@string/card_status_unkown"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20_px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_8"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/px_12"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:paddingTop="@dimen/px_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhen_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px" />

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="无"
            android:textColor="@color/text_color_holder"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="@dimen/px_16"
        android:background="@color/text_color_holder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/px_12"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:paddingTop="@dimen/px_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_number"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px" />

        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未验证"
            android:textColor="@color/text_color_holder"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_8"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/px_12"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:paddingTop="@dimen/px_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未绑定"
            android:textColor="@color/text_color_holder"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>

    <Button
        android:id="@+id/card_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_36"
        android:background="@drawable/cards_submint_full"
        android:text="开始身份验证"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20_px" />

    <Button
        android:id="@+id/phone_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_12"
        android:background="@drawable/cards_submint_emti"
        android:text="绑定手机号"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_20_px" />


</LinearLayout>
