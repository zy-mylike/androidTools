<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/px_8">

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:layout_marginTop="@dimen/px_4"
            android:layout_marginLeft="@dimen/px_8"
            android:textSize="@dimen/text_size_16_px"
            android:textColor="@color/text_6666_color"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="￥100元"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginTop="@dimen/px_4"
            android:layout_marginLeft="@dimen/px_8"
            android:textSize="@dimen/text_size_16_px"
            android:textColor="@color/text_6666_color"/>

    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-04-28  15：32：22  "
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginBottom="@dimen/px_8"
        android:textSize="@dimen/text_size_12_px"
        android:textColor="@color/text_6666_color"/>

</LinearLayout>