<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_img"
        android:layout_width="@dimen/px_28"
        android:layout_height="@dimen/px_28"
        android:layout_marginTop="@dimen/px_6"
        android:background="@null"/>

    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_4"
        android:layout_marginBottom="@dimen/px_6"
        android:textSize="@dimen/text_size_12_px" />

</LinearLayout>
