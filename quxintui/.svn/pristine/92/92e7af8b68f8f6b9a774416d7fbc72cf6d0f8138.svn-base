<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_coupons"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_27"
        android:layout_marginRight="@dimen/px_24"
        android:layout_marginTop="@dimen/px_9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠卷"
            android:textStyle="bold"
            android:textColor="#FF191919"
            android:textSize="@dimen/text_size_16_px" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="可使用"
            android:textColor="#FFFFD430"
            android:textSize="@dimen/text_size_12_px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px_5"
        android:layout_marginLeft="@dimen/px_27"
        android:layout_marginRight="@dimen/px_24"
        android:layout_marginTop="@dimen/px_39"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/coupons_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="￥ 20元"
            android:textStyle="bold"
            android:textColor="#FF191919"
            android:textSize="@dimen/text_size_20_px" />


        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/px_52"
            android:layout_marginLeft="@dimen/px_12"
            android:layout_marginRight="@dimen/px_12"
            android:background="#FFCECECE" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/coupons_tiaojian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="满10元可用"
                android:paddingLeft="@dimen/px_4"
                android:textColor="#FF191919"
                android:textSize="@dimen/text_size_12_px" />

            <TextView
                android:id="@+id/coupons_xianzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/px_4"
                android:text="限尾号 2345 的手机使用"
                android:layout_marginTop="@dimen/px_8"
                android:textColor="#FF191919"
                android:textSize="@dimen/text_size_12_px" />
            <TextView
                android:id="@+id/coupons_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/px_4"
                android:text="2016-05-01 至 2016-06-10"
                android:layout_marginTop="@dimen/px_8"
                android:textColor="#FF191919"
                android:textSize="@dimen/text_size_12_px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
