<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_60"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/px_12"
        android:background="@color/text_color_holder"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img"
        android:layout_toRightOf="@id/img"
        android:paddingRight="@dimen/px_16">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品名称"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <!-- android:drawableLeft="@mipmap/task_nums"-->
                <!-- android:drawablePadding="@dimen/px_2"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="代理商家"
                    android:textColor="#808080"
                    android:textSize="@dimen/text_size_12_px" />

                <TextView
                    android:id="@+id/finish_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_2"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="5000"
                    android:textColor="#FF524F"
                    android:textSize="@dimen/text_size_12_px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <!-- android:drawableLeft="@mipmap/task_nums"
                    android:drawablePadding="@dimen/px_2"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="分享奖励"
                    android:textColor="#808080"
                    android:textSize="@dimen/text_size_12_px" />

                <TextView
                    android:id="@+id/shareReward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_2"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="5000"
                    android:textColor="#FF524F"
                    android:textSize="@dimen/text_size_12_px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <!-- android:drawableLeft="@mipmap/task_money"
                    android:drawablePadding="@dimen/px_2"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="成交奖励"
                    android:textColor="#808080"
                    android:textSize="@dimen/text_size_12_px" />

                <TextView
                    android:id="@+id/task_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_2"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="50万元"
                    android:textColor="#FF524F"
                    android:textSize="@dimen/text_size_12_px" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginBottom="@dimen/px_12"
        android:layout_toRightOf="@+id/img"
        android:orientation="horizontal"
        android:visibility="gone">


        <Button
            android:id="@+id/share"
            android:layout_width="@dimen/px_120"
            android:layout_height="@dimen/px_32"
            android:background="@drawable/shape_share"
            android:text="分享"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/delete"
            android:layout_width="@dimen/px_120"
            android:layout_height="@dimen/px_32"
            android:layout_marginLeft="@dimen/px_24"
            android:background="@drawable/shape_delete"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
