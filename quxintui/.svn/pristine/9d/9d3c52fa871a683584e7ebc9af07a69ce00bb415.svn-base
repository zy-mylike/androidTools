<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.agent.BindPhoneActivity">

    <include layout="@layout/layout_activity_header_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_8"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/px_12"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:paddingTop="@dimen/px_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="手机号"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px" />

        <EditText
            android:id="@+id/card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_25"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLines="1"
            android:inputType="phone"
            android:textColor="@color/text_color_holder"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>


    <Button
        android:id="@+id/submint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_36"
        android:background="@drawable/cards_submint_full"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20_px" />

</LinearLayout>