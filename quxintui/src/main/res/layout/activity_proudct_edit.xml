<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_black"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.businesses.ProductEditActivity">

    <include layout="@layout/layout_activity_header_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_8"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginTop="@dimen/px_8"
                android:text="填写商品详情"
                android:textColor="#FF3d3d3d"
                android:textSize="@dimen/text_size_16_px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_12"
                android:layout_marginRight="@dimen/px_12"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:text="商品名称"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />

                <EditText
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="请输入商品名称(150字以内)"
                    android:lines="3"
                    android:maxLength="150"
                    android:maxLines="5"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_12"
                android:layout_marginRight="@dimen/px_12"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:text="商品价格"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />


                <EditText
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="给商品定个好价格吧"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_16_px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_12"
                android:layout_marginRight="@dimen/px_12"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:text="库存数量"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />

                <EditText
                    android:id="@+id/product_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:hint="设置合理库存避免超卖哦"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_16_px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_12"
                android:layout_marginRight="@dimen/px_12"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:text="商品描述"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />

                <EditText
                    android:id="@+id/product_desp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="请输入商品描述"
                    android:lines="6"
                    android:maxLines="10"
                    android:textSize="@dimen/text_size_16_px" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginTop="@dimen/px_8"
                android:drawablePadding="@dimen/px_8"
                android:drawableRight="@mipmap/icon_tip"
                android:gravity="center"
                android:text="分享奖励"
                android:textColor="#FF3D3D3D"
                android:textSize="@dimen/text_size_16_px" />

            <EditText
                android:id="@+id/share_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginRight="@dimen/px_16"
                android:layout_marginTop="@dimen/px_8"
                android:background="@drawable/edittext_bg"
                android:hint="请输入分享奖励"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="@dimen/text_size_16_px" />



            <TextView
                android:id="@+id/tv_alert2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginTop="@dimen/px_8"
                android:drawablePadding="@dimen/px_8"
                android:drawableRight="@mipmap/icon_tip"
                android:gravity="center"
                android:text="代理折扣"
                android:textColor="#FF3D3D3D"
                android:textSize="@dimen/text_size_16_px" />

            <EditText
                android:id="@+id/deal_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginRight="@dimen/px_16"
                android:layout_marginTop="@dimen/px_8"
                android:background="@drawable/edittext_bg"
                android:hint="请输入代理折扣（%）"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="@dimen/text_size_16_px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_8"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginTop="@dimen/px_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传图片"
                    android:textColor="#FF3d3d3d"
                    android:textSize="@dimen/text_size_16_px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_12"
                    android:text="可上传9张图片"
                    android:textColor="#FF808080"
                    android:textSize="@dimen/text_size_12_px"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.enetic.push.view.NoScrollGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_16"
                android:layout_marginRight="@dimen/px_16"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:verticalSpacing="@dimen/px_8" />

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/submint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_20_px" />


</LinearLayout>