<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px_12"
            android:layout_marginTop="@dimen/px_24"
            android:drawablePadding="@dimen/px_12"
            android:drawableRight="@mipmap/icon_send_ok"
            android:text="发布成功"
            android:textColor="#FF3D3D3D"
            android:textSize="@dimen/text_size_20_px" />

        <include layout="@layout/layout_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_marginRight="@dimen/px_24"
            android:layout_marginTop="@dimen/px_9"
            android:text="商品已成功上架，你现在可以选择一键分享至朋友圈或生成推广链接发给您的渠道代理。"
            android:textColor="#FF3D3D3D"
            android:textSize="@dimen/text_size_16_px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/px_10">


            <Button
                android:id="@+id/send_proxy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/px_8"
                android:drawableTop="@mipmap/icon_send"
                android:gravity="center"
                android:text="发送代理"
                android:background="@null"
                android:textColor="#FF3D3D3D"
                android:textSize="@dimen/text_size_16_px" />

            <Button
                android:id="@+id/share_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/px_8"
                android:drawableTop="@mipmap/share_friends"
                android:gravity="center"
                android:text="朋友圈"
                android:background="@null"
                android:textColor="#FF3D3D3D"
                android:textSize="@dimen/text_size_16_px" />

            <Button
                android:id="@+id/wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/px_8"
                android:drawableTop="@mipmap/icon_share_agent"
                android:gravity="center"
                android:text="微信好友"
                android:background="@null"
                android:textColor="#FF3D3D3D"
                android:textSize="@dimen/text_size_16_px" />
        </LinearLayout>

        <Button
            android:id="@+id/submint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/text_color" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_12"
        android:background="@drawable/edittext_bg"
        android:gravity="center">

        <Button
            android:id="@+id/add_proxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableRight="@mipmap/icon_adds"
            android:drawablePadding="@dimen/px_12"
            android:text="继续添加"
            android:textColor="#FF3D3D3D"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>
</LinearLayout>