<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.agent.VerifyCardActivity">

    <include layout="@layout/layout_activity_header_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/px_8"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/px_12"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:paddingTop="@dimen/px_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:ems="4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px" />

        <EditText
            android:id="@+id/card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_25"
            android:background="@null"
            android:hint="@string/zhen_name"
            android:maxLines="1"
            android:textColor="@color/text_color_holder"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="@dimen/px_16"
        android:background="@color/text_color_holder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/px_12"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:paddingTop="@dimen/px_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_number"
            android:textColor="@color/text_color"
            android:ems="4"
            android:textSize="@dimen/text_size_16_px" />

        <EditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_25"
            android:background="@null"
            android:digits="1234567890xX"
            android:hint="请输入身份证号"
            android:maxLines="1"
            android:textColor="@color/text_color_holder"
            android:textSize="@dimen/text_size_16_px" />
    </LinearLayout>
    <Button
        android:id="@+id/submint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_36"
        android:background="@drawable/binding_submint_full"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20_px" />

</LinearLayout>