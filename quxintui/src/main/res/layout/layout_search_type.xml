<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/more_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/px_5">

    <TextView
        android:id="@+id/carToon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_detail_edit"
        android:drawablePadding="@dimen/px_4"
        android:gravity="center"
        android:padding="@dimen/px_15"
        android:tag="1"
        android:text="编辑"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffffff"
        />

    <TextView
        android:id="@+id/carToon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_detail_delete"
        android:drawablePadding="@dimen/px_4"
        android:gravity="center"
        android:padding="@dimen/px_15"
        android:tag="2"
        android:text="删除"
        android:textColor="@android:color/white" />

</LinearLayout>