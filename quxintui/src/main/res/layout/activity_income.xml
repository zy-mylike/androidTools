<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_black"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.enetic.push.activity.agent.IncomeActivity">

    <include layout="@layout/layout_activity_header_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px_22"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginTop="@dimen/px_8"
        android:background="@mipmap/icon_incom"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_8"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center"
            android:text="推广费"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_12"
            android:gravity="center"
            android:text="注:最低0.05元/条"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_12_px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_19"
            android:layout_marginRight="@dimen/px_19"
            android:background="@mipmap/incom_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_67"
                android:gravity="center"
                android:text="推广条数"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_67"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:layout_marginLeft="@dimen/px_40"
                    android:layout_marginRight="@dimen/px_16"
                    android:src="@mipmap/incom_unadd" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_16"
                    android:singleLine="true"
                    android:text="77"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />


                <ImageView
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:src="@mipmap/incom_add" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_67"
                android:gravity="center"
                android:text="推广费"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_67"
                android:gravity="right"
                android:singleLine="true"
                android:text="0.05元/条"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_67"
                android:gravity="center"
                android:text="单月天数"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_67"
                android:gravity="right"
                android:singleLine="true"
                android:text="30天/月"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_8"
            android:layout_marginTop="@dimen/px_48"
            android:gravity="center"
            android:text="返点费"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16_px"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_12"
            android:gravity="center"
            android:text="注:是成交价格的百分比"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_12_px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_19"
            android:layout_marginRight="@dimen/px_19"
            android:background="@mipmap/incom_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_67"
                android:gravity="center"
                android:text="返点费"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_67"
                android:gravity="right"
                android:singleLine="true"
                android:text="1%"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16_px" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_86"
                android:layout_above="@+id/submint"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_67"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="预算总计"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16_px" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_67"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="288元/月"
                    android:textColor="#FF524F"
                    android:textSize="@dimen/text_size_16_px" />

            </LinearLayout>


            <Button
                android:id="@+id/submint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px_28"
                android:layout_marginLeft="@dimen/px_68"
                android:layout_marginRight="@dimen/px_68"
                android:text="立即行动" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
