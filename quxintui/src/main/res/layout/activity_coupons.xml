<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_black"
    android:fitsSystemWindows="true"
    tools:context="com.enetic.push.activity.businesses.CouponsActivity">

    <include layout="@layout/layout_activity_header_main"/>


    <LinearLayout
        android:id="@+id/layout_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_coupons_null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="暂无优惠卷"
            android:layout_marginTop="@dimen/px_10"
            android:textColor="#FF808080"
            />

    </LinearLayout>

    <org.eteclab.ui.widget.pulltorefresh.PullToLoadView
        android:id="@+id/pull_list"
        android:layout_margin="@dimen/px_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>
