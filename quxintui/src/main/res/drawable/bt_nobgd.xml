<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/px_4"/>
            <gradient android:angle="270" android:endColor="#77C63D" android:startColor="#77C63D" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape>
    </item>

    <!-- focus -->
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/px_4"/>
            <gradient android:angle="270" android:endColor="#77C63D" android:startColor="#77C63D" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8077C63D" />
            <corners android:radius="@dimen/px_4"/>
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape>
    </item>

</selector>